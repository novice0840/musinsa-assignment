generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Job {
  id          Int      @id @default(autoincrement())
  subsidiary  String
  occupation  String
  job         String
  description String
  career      Int
  employment  String
  place       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  
  applications Application[]
}

model Application {
  id          Int      @id @default(autoincrement())
  jobId       Int
  name        String
  email       String
  phone       String
  englishName String
  resumeUrl   String
  portfolioUrl String?
  source      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  job         Job      @relation(fields: [jobId], references: [id])
}
